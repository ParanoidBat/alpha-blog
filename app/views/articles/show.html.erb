<h2 class="text-center my-4"> <%= @article.title %></h2>

<div class="container">

    <div class="row">
        <div class="col-8 offset-2">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                By <%= @article.user.username %>
                </div>
                
                <div class="card-body bg-light">
                <div class="card-text text-left"> <%= simple_format(@article.description) %> </div>
                
                <% if logged_in? && current_user == @article.user %>
                <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-primary" %>
                <%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: "Ya sho mate?"}, class: "btn btn-outline-danger" %>
                <% end %>
                </div>
                
                <div class="card-footer text-muted">
                    <small>Created <%= time_ago_in_words(@article.created_at) %> ago,
                    Edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
                </div>
            </div>
            <%= link_to 'To Articles', articles_path, class: "text-decoration-none text-dark" %>
        </div>
    </div>
</div>