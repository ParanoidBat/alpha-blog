<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @user %>

            <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
                
                <div class="form-group row mt-3">
                    <%= form.label :username, class: "col-2 col-form-label text-light"%>
                    
                    <div class="col-10">
                        <%= form.text_field :username, class: "form-control shadow rounded" %>
                    </div>
                </div>

                <div class="form-group row mt-3">
                    <%= form.label :email, class: "col-2 col-form-label text-light" %>

                    <div class="col-10">
                        <%= form.email_field :email, class: "form-control shadow rounded" %>
                    </div>
                </div>

                <div class="form-group row mt-3">
                    <%= form.label :password, class: "col-2 col-form-label text-light" %>

                    <div class="col-10">
                        <%= form.password_field :password, class: "form-control shadow rounded" %>
                    </div>
                </div>

                <%= form.submit "Sign Up", class: "btn btn-outline-light mt-3"%>

            <% end %>
        </div>

        <div class="row mb-3">
            <%= link_to 'Back', articles_path, class: "text-info"%>
        </div>
    </div>
</div>