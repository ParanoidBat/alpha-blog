<h3 class="text-center my-4">Bloggers</h3>

<div class="container">
    <% @users.each do |user| %>
    
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                <%= link_to user.username, user, class: "text-decoration-none"%>
                </div>
                
                <div class="card-body bg-light">
                <p class="card-text"> Blogs Posted: <%= user.articles.count %> </p>
    
                <%= link_to 'View Profile', user, class: "btn btn-outline-success" %>
                <%= link_to 'Edit Profile', edit_user_path(user), class: "btn btn-outline-danger" %>
                </div>
                
                <div class="card-footer text-muted">
                    <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
                </div>
            </div>
        </div>
    </div>
    
    <% end %>
</div>